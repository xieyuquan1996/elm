.seckill-info
  position relative
  display: flex
  flex-direction: column
  font-size: 14px
  .top-wrapper
    flex-grow: 1
    flex-grow: 1
    overflow: scroll
    .img-wrapper
      position relative
      .icon-back
        position: absolute
        font-size: 24px
        background-color: rgb(157,157,157)
        border-radius: 50%
        padding: 3px
        left 15px
        top: 10px
      .img
        width: 100%
    .time
      padding 10px
      font-size: 16px
      background-color: #f98b3a
      color rgb(255,255,255)
      font-weight: 500
      .time-title
        font-size: 14px
        margin-right: 10px
      .time-wrapper
        .time-common
          padding: 2px
          color: #f98b3a
          background-color: rgb(255,255,255)
    .goods-name-title
      padding: 5px 15px
      font-size: 16px
      font-weight: 500
      border-bottom: 5px solid rgba(157,157,157.0.3)
      line-height: 26px
    .goods-info-titlt
      padding 15px
      font-weight: 700
      font-size: 14px
    .img
      width: 100%
      box-sizing: border-box
      padding: 0 10px
  .bottom-wrapper
    flex-shrink: 0
    flex-grow: 0
    text-align: center
    padding: 5px 0
    .seckill-button
      display inline-block
      width: 80%
      padding: 15px
      font-size: 16px
      font-weight: 700
      background-color: #f98b3a
      border-radius: 10px
      color: rgb(255,255,255)
    .gray
      background-color: rgb(157,157,157)
.seller
  font-size: .32rem
  height 100%
  overflow scroll
  .shop-info
    padding: 0 .48rem
    border-bottom: .426667rem solid #f3f5f7
    .first-wrapper
      position relative
      padding: .48rem 0
      border-bottom: .013333rem solid rgba(7,17,27,0.1)
      .left-wrapper
        .up
          font-size: .373333rem
          color: rgb(7,17,27)
          line-height: .373333rem
          margin-bottom: .213333rem
        .down
          height .48rem
          .star
            display inline-block
            height .48rem
          .text
            font-size: .266667rem
            color: rgb(77,58,39)
            line-height: .48rem
      .right-wrapper
        position: absolute
        padding: .066667rem
        top: .266667rem
        right 0
        .icon
          display: flex
          justify-content: center
          font-size: .64rem
          line-height: .64rem
          margin-bottom: .106667rem
          &.high-light
            color: red
        .text
          width: 1.066667rem
          font-size: .266667rem
          color: rgb(77,85,93)
          line-height: .266667rem
          text-align: center
    .second-wrapper
      padding: .48rem 0
      display: flex
      .content-wrapper:last-child
        border: 0
      .content-wrapper
        flex: 1
        text-align: center
        border-right: .013333rem solid rgb(153,159,163)
        .tittle
          font-size: .266667rem
          color: rgb(147,153,159)
          line-height: .266667rem
          margin-bottom: .106667rem
        .number-wrapper
          font-weight: 200
          color: rgb(7,17,27)
          line-height: .64rem
          .number
            font-size: .64rem
          .unit
            font-size: .266667rem
  .notice-wrapper
    padding: 0 .48rem
    border-bottom: .426667rem solid #f3f5f7
    .tittle
      margin-top: .48rem
      font-size: .373333rem
      color: rgb(7,17,27)
      line-height: .373333rem
      margin-bottom: .213333rem
    .desc
      padding: 0 .32rem
      font-size: .32rem
      font-weight: 200
      color: rgb(240,20,20)
      line-height: .64rem
      margin-bottom: .426667rem
    .supports
      border-top: .013333rem solid #f3f5f7
      padding: .426667rem .32rem
      .icon
        height .426667rem
        width: .426667rem
        margin-right: .16rem
      .text
        font-size: .32rem
        font-weight: 200
        color: rgb(7,17,27)
        line-height: .426667rem
  .real-wrapper
    padding: .48rem
    padding-bottom: 0
    border-bottom: .426667rem solid #f3f5f7
    .tittle
      font-size: .373333rem
      color: rgb(7,17,27)
      line-height: .373333rem
      margin-bottom: .32rem
    .img
      width: 100%
      overflow-y hidden
  .seller-info
    padding: .48rem
    padding-bottom: 0
    .tittle
      font-size: .373333rem
      color: rgb(7,17,27)
      line-height: .373333rem
      margin-bottom: 24px
    .info
      padding: .426667rem .32rem
      font-size: .32rem
      font-weight: 200
      color: rgb(7,17,27)
      line-height: .426667rem
      border-top: .013334rem solid #f3f5f7

.user
  position relative
  height 100%
  font-size .373333rem /* 28/75 */
  background: rgb(240, 240, 240);
  .user-content
    padding: 10% 0 5%;
    background url('//s3plus.meituan.net/v1/mss_e2821d7f0cfe4ac1bf9202ecf9590e67/cdn-prod/file:9096d347/78890a8f1859bc10152151fc64aff5cc.png')

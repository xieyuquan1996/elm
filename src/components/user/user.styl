    .img-wrapper
      margin auto 
      border: 4px solid #ffe699;
      border-radius: 100%;
      width: 19.7333%
      padding-top: 19.7333%
      background: url(//s3plus.meituan.net/v1/mss_e2821d7f0cfe4ac1bf9202ecf9590e67/cdn-prod/file:9096d347/835c1ccacf724c558dc7e8247d7dc9d3.png) no-repeat
      background-size 100% 100%
